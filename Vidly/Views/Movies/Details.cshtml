@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

 
<ul>
    <li>Genre: @Model.GenreType.Name</li>
    <li>Release Date:  @Model.ReleasedDate.ToString("dddd, MMMM d, yyyy")</li>
    <li>Added Date: @Model.DateAdded.ToString("dddd, MMMM d, yyyy")</li>
    <li>Number in Stocks: @Model.NoInStocks</li>
</ul>

